{
  "name": "auditclaw",
  "version": "0.1.0-dev",
  "description": "AI-powered internal audit assistant with document analysis and workpaper generation",
  "keywords": [
    "ai",
    "assistant",
    "audit",
    "internal-audit",
    "workpapers"
  ],
  "license": "MIT",
  "author": "",
  "bin": {
    "auditclaw": "auditclaw.mjs"
  },
  "files": [
    "assets/",
    "CHANGELOG.md",
    "dist/",
    "docs/",
    "LICENSE",
    "auditclaw.mjs",
    "README.md",
    "skills/"
  ],
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./plugin-sdk": "./dist/plugin-sdk/index.js",
    "./cli-entry": "./auditclaw.mjs"
  },
  "scripts": {
    "auditclaw": "node scripts/run-node.mjs",
    "auditclaw:rpc": "node scripts/run-node.mjs agent --mode rpc --json",
    "build": "pnpm canvas:a2ui:bundle && tsdown && node --import tsx scripts/canvas-a2ui-copy.ts && node --import tsx scripts/copy-hook-metadata.ts && node --import tsx scripts/write-build-info.ts",
    "canvas:a2ui:bundle": "bash scripts/bundle-a2ui.sh",
    "check": "pnpm tsgo && pnpm lint && pnpm format",
    "check:loc": "node --import tsx scripts/check-ts-max-loc.ts --max 500",
    "dev": "node scripts/run-node.mjs",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "gateway:dev": "node scripts/run-node.mjs --dev gateway",
    "gateway:dev:reset": "node scripts/run-node.mjs --dev gateway --reset",
    "gateway:watch": "node scripts/watch-node.mjs gateway --force",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix && pnpm format:fix",
    "prepack": "pnpm build && pnpm ui:build",
    "prepare": "command -v git >/dev/null 2>&1 && git config core.hooksPath git-hooks || exit 0",
    "protocol:gen": "node --import tsx scripts/protocol-gen.ts",
    "release:check": "node --import tsx scripts/release-check.ts",
    "start": "node scripts/run-node.mjs",
    "test": "node scripts/test-parallel.mjs",
    "test:all": "pnpm lint && pnpm build && pnpm test && pnpm test:e2e && pnpm test:live",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:force": "node --import tsx scripts/test-force.ts",
    "test:live": "AUDITCLAW_LIVE_TEST=1 vitest run --config vitest.live.config.ts",
    "test:ui": "pnpm --dir ui test",
    "test:watch": "vitest",
    "tui": "node scripts/run-node.mjs tui",
    "tui:dev": "AUDITCLAW_PROFILE=dev node scripts/run-node.mjs --dev tui",
    "ui:build": "node scripts/ui.js build",
    "ui:dev": "node scripts/ui.js dev",
    "ui:install": "node scripts/ui.js install"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "0.13.1",
    "@aws-sdk/client-bedrock": "^3.981.0",
    "@buape/carbon": "0.14.0",
    "@clack/prompts": "^1.0.0",
    "@homebridge/ciao": "^1.3.4",
    "@lydell/node-pty": "1.2.0-beta.3",
    "@mariozechner/pi-agent-core": "0.51.1",
    "@mariozechner/pi-ai": "0.51.1",
    "@mariozechner/pi-coding-agent": "0.51.1",
    "@mariozechner/pi-tui": "0.51.1",
    "@mozilla/readability": "^0.6.0",
    "@sinclair/typebox": "0.34.48",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "cli-highlight": "^2.1.11",
    "commander": "^14.0.3",
    "croner": "^10.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "file-type": "^21.3.0",
    "hono": "4.11.7",
    "jiti": "^2.6.1",
    "json5": "^2.2.3",
    "jszip": "^3.10.1",
    "linkedom": "^0.18.12",
    "long": "^5.3.2",
    "markdown-it": "^14.1.0",
    "osc-progress": "^0.3.0",
    "pdfjs-dist": "^5.4.624",
    "playwright-core": "1.58.1",
    "proper-lockfile": "^4.1.2",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.34.5",
    "signal-utils": "^0.21.1",
    "sqlite-vec": "0.1.7-alpha.2",
    "tar": "7.5.7",
    "tslog": "^4.10.2",
    "undici": "^7.20.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@lit-labs/signals": "^0.2.0",
    "@lit/context": "^1.1.6",
    "@types/express": "^5.0.6",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.2.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "7.0.0-dev.20260202.1",
    "@vitest/coverage-v8": "^4.0.18",
    "lit": "^3.3.2",
    "ollama": "^0.6.3",
    "oxfmt": "0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.4",
    "rolldown": "1.0.0-rc.2",
    "tsdown": "^0.20.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@napi-rs/canvas": "^0.1.89",
    "node-llama-cpp": "3.15.1"
  },
  "overrides": {
    "tar": "7.5.7"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "minimumReleaseAge": 2880,
    "overrides": {
      "fast-xml-parser": "5.3.4",
      "form-data": "2.5.4",
      "@hono/node-server>hono": "4.11.7",
      "hono": "4.11.7",
      "qs": "6.14.1",
      "@sinclair/typebox": "0.34.47",
      "tar": "7.5.7",
      "tough-cookie": "4.1.3"
    },
    "onlyBuiltDependencies": [
      "@lydell/node-pty",
      "@matrix-org/matrix-sdk-crypto-nodejs",
      "@napi-rs/canvas",
      "authenticate-pam",
      "esbuild",
      "node-llama-cpp",
      "protobufjs",
      "sharp"
    ]
  },
  "vitest": {
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "lcov"
      ],
      "thresholds": {
        "lines": 70,
        "functions": 70,
        "branches": 70,
        "statements": 70
      },
      "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "src/**/*.test.ts"
      ]
    },
    "include": [
      "src/**/*.test.ts"
    ],
    "exclude": [
      "dist/**",
      "apps/macos/**",
      "apps/macos/.build/**",
      "**/vendor/**",
      "apps/macos/.build/**",
      "dist/OpenClaw.app/**"
    ]
  }
}
